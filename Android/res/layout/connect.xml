<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background" >

    <TextView
        android:id="@+id/connect_user_Heading1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="@string/connect_user_Heading1"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/connect_user_Heading2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/connect_user_Heading1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="@string/connect_user_Heading2"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/connect_user_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/connect_user_Heading2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/connect_user_connection"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/connect_user_Heading3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/connect_user_connection"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="@string/connect_user_Heading3"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ListView
        android:id="@+id/connect_user_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/connect_user_Heading3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>